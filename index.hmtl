<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Radar Chart - Subject Strength</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f0f8ff;
      padding: 40px;
      text-align: center;
    }
    canvas {
      max-width: 800px;
      margin: auto;
    }
    h2 {
      margin-bottom: 20px;
      color: #333;
    }
  </style>
</head>
<body>
  <h2>Subject-wise Strength Comparison (Radar Chart)</h2>
  <canvas id="radarChart"></canvas>

  <script>
    const subjects = [
      "B1", "B2", "E1", "E2", "Math",
      "HMath", "Physics", "Chemistry", "Biology", "BGS", "ICT"
    ];

    const medha = [88, 80, 82, 88, 83, 71, 75, 80, 88, 96, 49 * 2]; // ICT scaled
    const raiyan = [80, 83, 86, 92, 89, 96, 90, 84, 96, 99, 49 * 2];
    const sourav = [76, 78, 70, 88, 91, 92, 93, 82, 95, 97, 47 * 2];

    const data = {
      labels: subjects,
      datasets: [
        {
          label: "Medha",
          data: medha,
          fill: true,
          backgroundColor: "rgba(255, 99, 132, 0.2)",
          borderColor: "rgba(255, 99, 132, 1)",
          pointBackgroundColor: "rgba(255, 99, 132, 1)",
        },
        {
          label: "Raiyan",
          data: raiyan,
          fill: true,
          backgroundColor: "rgba(54, 162, 235, 0.2)",
          borderColor: "rgba(54, 162, 235, 1)",
          pointBackgroundColor: "rgba(54, 162, 235, 1)",
        },
        {
          label: "Sourav",
          data: sourav,
          fill: true,
          backgroundColor: "rgba(255, 206, 86, 0.2)",
          borderColor: "rgba(255, 206, 86, 1)",
          pointBackgroundColor: "rgba(255, 206, 86, 1)",
        },
      ]
    };

    const config = {
      type: 'radar',
      data: data,
      options: {
        responsive: true,
        scales: {
          r: {
            beginAtZero: true,
            max: 100
          }
        },
        plugins: {
          legend: {
            position: 'top'
          },
          title: {
            display: true,
            text: 'Radar View of Student Subject Strengths'
          }
        }
      },
    };

    new Chart(document.getElementById("radarChart"), config);
  </script>
</body>
</html>
